pipeline {
    agent { label 'cproj' } 
   
   stages { 
        stage('Build docker image') {
            steps {  
                sh 'docker build -t manasabhat2222/nginx:$BUILD_NUMBER .'
            }
        }
        stage('login to dockerhub') {
        steps {
        withCredentials([usernameColonPassword(credentialsId: 'docker-nginx', variable: 'DOCKER_CREDENTIALS')]) {
        sh '''
        docker login -u docker-nginx --password-stdin ${DOCKER_CREDENTIALS} 
         docker push manasabhat2222/nginx:$BUILD_NUMBER 
           '''
           }
            }
        }
        
        stage('RUN') {
        steps {
        sh 'docker run -d -p 9090:80 manasabhat2222/nginx:$BUILD_NUMBER'
        }
        }
        }
}
